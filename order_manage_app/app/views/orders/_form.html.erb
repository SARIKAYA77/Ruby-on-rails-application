
<div class="flex-row d-flex justify-content-center">

<div class="col-md-8">
<div class="card mt-5">

    <div class="card-body">
    <%= form_for @order do |f| %>

    
    <div class="form-group">
    <%= f.label :title%>
    <%= f.text_field :title, class: 'form-control' %>
    
    </div>

    <div class="form-group">
    <%= f.label :money%>
    <%= f.text_field :money, class: 'form-control' %>
    
    </div>


    <%= f.label :content%>
    <%= f.text_area :content, class: 'form-control'%>

    </div>

    <div class="form-group">

    <%= f.select :category_id, Category.all.map {|c| [c.category, c.id]} %>

    </div>

    

    <%= f.submit "Create Order", class: 'btn btn-outline-primary' %>
    <%= link_to "Back", orders_path, class: 'btn btn-outline-secondary' %>

<% end %>

    </div>
</div>


</div>

</div>
