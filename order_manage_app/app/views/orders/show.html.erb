
<div class="container-fluid mt-3">
<h1>Category: <%= @order.category.category %></h1>
<h3><%= @order.title %></h3>


<p><%= @order.content %></p>
<p><%= @order.money %></p>

<%= link_to "Edit", edit_order_path(@order.id), class: 'btn btn-primary' %>
<%= link_to "Delete", order_path(@order.id), method: :delete, class: 'btn btn-danger' %>
<%= link_to "Back", orders_path, class: 'btn btn-secondary'%>
</div>